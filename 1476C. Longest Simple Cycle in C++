const int lx=1e5+123;
const ll mod = 1000000007;

void solve()
{
    ll n, i, j, k, l, ans=0, mx=0;
    cin>>n;
    ll a[n], b[n], c[n];

    for(i=0; i<n; i++)
        cin>>c[i];
    for(i=0; i<n; i++)
        cin>>a[i];
    for(i=0; i<n; i++)
        cin>>b[i];

    for(i=n-1; i>0; i--)
    {
        if(i==n-1)
        {
            ans=c[i]-1;
            ans+=2;

            if(a[i]==b[i])
            {
                mx=max(mx, ans);
                ans=c[i-1]-1;
            }
            else
            {
                mx=max(mx, ans+abs(a[i]-b[i]));
                ans+=(c[i-1]-1)-abs(a[i]-b[i]);
            }
        }
        else
        {
            ans=max(ans, c[i]-1);
            ans+=2;

            if(a[i]==b[i])
            {
                mx=max(mx, ans);
                ans=c[i-1]-1;
            }
            else
            {
                mx=max(mx, ans+abs(a[i]-b[i]));
                ans+=(c[i-1]-1)-abs(a[i]-b[i]);
            }
        }
    }
    cout<<mx<<endl;
}

void init_code()
{
    freopen("input.txt", "r", stdin);
    freopen("output.txt", "w", stdout);
}

int main()
{
    faster
   // init_code();
    tc
    solve();
  //  co(mn);
// A L H A M D U L I L L A H
// 1 2 3 2 1
}

